{
  "name": "signage",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "sst dev",
    "dev:local": "pnpm --filter @signage/local-dev start & sleep 1 && VITE_WEBSOCKET_URL=ws://localhost:8080 pnpm --filter @signage/web dev",
    "dev:server": "pnpm --filter @signage/local-dev start",
    "dev:web": "VITE_WEBSOCKET_URL=ws://localhost:8080 pnpm --filter @signage/web dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "deploy": "sst deploy",
    "deploy:prod": "sst deploy --stage prod"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "sst": "^3.5.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
